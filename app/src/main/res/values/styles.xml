<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GenericStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextViewTitle" parent="GenericStyle">
        <item name="android:text">@string/txt_title</item>
        <item name="android:textSize">@dimen/twenty_four_dp</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
    </style>

    <style name="TextViewSubTitle" parent="GenericStyle">
        <item name="android:text">@string/txt_sub_title</item>
        <item name="android:textSize">@dimen/eighteen_dp</item>
        <item name="android:textColor">@color/text_subtitle</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_marginStart">@dimen/four_dp</item>
        <item name="android:layout_marginLeft">@dimen/four_dp</item>
        <item name="android:layout_marginTop">@dimen/four_dp</item>
        <item name="android:layout_marginRight">@dimen/four_dp</item>
        <item name="android:layout_marginBottom">@dimen/four_dp</item>
        <item name="android:layout_marginEnd">@dimen/four_dp</item>
    </style>
</resources>