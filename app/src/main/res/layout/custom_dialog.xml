<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/three_hundred"
        android:layout_height="@dimen/image_width"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:layout_marginBottom="@dimen/thirty_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telstra"
            android:textColor="@color/text_subtitle"
            android:textSize="@dimen/twenty_sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:text="@string/text_error"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/twenty_sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <Button
            android:id="@+id/btn_yes"
            style="@style/MyButton"
            android:text="@string/text_yes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_no"
            app:layout_constraintTop_toBottomOf="@+id/tvBody" />

        <Button
            android:id="@+id/btn_no"
            style="@style/MyButton"
            android:text="@string/text_no"
            app:layout_constraintLeft_toRightOf="@+id/btn_yes"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBody" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>